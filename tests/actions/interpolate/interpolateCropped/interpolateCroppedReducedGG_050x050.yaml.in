plans:
  - name: test-interpolate-reducedgg-050x050-cropped
    actions:
      - type: select
        match:
          - param: 133
      - type: interpolate
        outputSize: 231120
        inputConfiguration:
          loadFromFile:
            pl: @multio_SOURCE_DIR@/tests/actions/interpolate/pointsPerLatitude.dat
          setByValue:
            gridType: reduced_gg
            gridded: true
            north: 90.0
            south: -90.0
            west: 0.0
            east: 360.0
            N: 1280
        jobConfiguration:
          setByValue:
            grid: [0.5, 0.5]
            area: [80.0, 0.0, -80.0, 360.0]
            # dont-compress-plan: true
            interpolation: linear
            caching: true
        outputConfiguration:
          empty:
      - type: encode
        format: grib
        template: @multio_BINARY_DIR@/tests/interpolate/data/reducedgg-PL/mars-reducedgg-050x050-cropped.grib
      - type: sink
        sinks:
          - type: file
            append: false
            per-server: false # Will give you one file per server
            path: @multio_BINARY_DIR@/tests/interpolate/interpolateCropped/multio-reducedgg-050x050-cropped.grib
