plans:
  - name: test-interpolate-spectral-100x100-cropped
    actions:
      - type: select
        match:
          - param: 129
      - type: interpolate
        outputSize: 57960
        inputConfiguration:
          setByValue:
            gridType: sh
            spectral: true
            truncation: 1279
        jobConfiguration:
          setByValue:
            grid: [1.0, 1.0]
            area: [80.0, 0.0, -80.0, 360.0]
            dont-compress-plan: true
            interpolation: linear
            caching: true
        outputConfiguration:
          empty:
      - type: encode
        format: grib
        template: @CMAKE_BINARY_DIR@/multio/tests/interpolate/data/spherical-PL/mars-spherical-100x100-cropped.grib
      - type: sink
        sinks:
          - type: file
            append: false
            per-server: false # Will give you one file per server
            path: @CMAKE_BINARY_DIR@/multio/tests/interpolate/interpolateCropped/multio-spherical-100x100-cropped.grib
