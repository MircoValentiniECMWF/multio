plans:
  - name: test-interpolate-spectral-050x050-cropped
    actions:
      - type: select
        match:
          - param: 129
      - type: interpolate
        outputSize: 231120
        inputConfiguration:
          setByValue:
            gridType: sh
            spectral: true
            truncation: 1279
        jobConfiguration:
          setByValue:
            grid: [0.5, 0.5]
            area: [80.0, 0.0, -80.0, 360.0]
            dont-compress-plan: true
            interpolation: linear
            caching: true
        outputConfiguration:
          empty:
      - type: encode
        format: grib
        template: @multio_BINARY_DIR@/tests/actions/interpolate/data/spherical/MarsCroppedSpherical050x050.grib
      - type: sink
        sinks:
          - type: file
            append: false
            per-server: false # Will give you one file per server
            path: @multio_BINARY_DIR@/tests/actions/interpolate/cropped/pure-forwarding/MultioCroppedSpherical050x050.grib
